<style>
  h5 a {
    color: black;
    text-decoration: none;
  }

  hr, .offcanvas-body {
    margin-top: 0;
    margin-bottom: 0;
  }


  button .btn:hover {
            cursor: pointer;
            opacity: 0.8 !important;
        }
        #sidebarToggleButton {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 20px;
            height: 70px;
            box-shadow: 0 0 3px rgba(0, 0, 0, 1);
            position: fixed;
            top: 20%;
            left: 0px;
            z-index: 10000;
            transition: left 0.3s ease-in-out;
            background-color: rgb(0, 96, 247);
            font-size: 25px;
            color: white;
            cursor: pointer;
            

            @media print {
                display: none;
            }
        }
        #sidebarToggleButton:hover {
            opacity: 0.8;
        }

        .sidebarOpen {
            left: 399px !important;
        }
</style>

<div class="offcanvas offcanvas-start" id="offcanvas" aria-labelledby="offcanvasLabel">
    <div class="offcanvas-header">
      <h5 class="offcanvas-title" id="offcanvasLabel">
        <a href="<%= typeof currentPlant !== 'undefined' ? `/plant/${currentPlant._id}` : '/' %>"><%= typeof currentPlant !== 'undefined' ? currentPlant.name : 'Home' %></a>
      </h5>
      
    </div>
    <hr>
  
    <div class="offcanvas-body">
      <% if (typeof currentPlant !== 'undefined') { %>
      <%- include('sidebarContent') %>
      <% } else { %>
        <%- include('sidebarContentNoPlant') %>
      <% } %>
    </div>
  </div>

  <div id="sidebarToggleButton" class="rounded-end-5 border-0 border-start-0 border"
      type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvas"  aria-controls="offcanvasStart">
        â‰¡
  </div>


  <script>
    const sidebarButton = document.querySelector('#sidebarToggleButton');
    const sidebar = document.querySelector('#offcanvas');

    sidebarButton.addEventListener('mouseover', ()=> {
      if (!sidebarButton.classList.contains('sidebarOpen')) {
        sidebarButton.classList.toggle('sidebarOpen')
        // sidebar.classList.toggle('show')
        sidebarButton.click()
      }
    })

    sidebarButton.addEventListener('mouseout', () => {
      const isMouseOutside = !sidebar.contains(event.relatedTarget) && !sidebarButton.contains(event.relatedTarget);
      if (isMouseOutside) {
        sidebarButton.classList.remove('sidebarOpen');
        // sidebar.classList.remove('show');
        sidebarButton.click()
      }
    })

    sidebar.addEventListener('mouseout', (event) => {
      // Check if the mouse moved outside the sidebar and sidebarButton
      const isMouseOutside = !sidebar.contains(event.relatedTarget) && !sidebarButton.contains(event.relatedTarget);
      if (isMouseOutside) {
        sidebarButton.classList.remove('sidebarOpen');
        // sidebar.classList.remove('show');
        sidebarButton.click()
      }
    });
</script>