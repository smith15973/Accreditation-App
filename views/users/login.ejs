<% layout('layouts/boilerplate') %>

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="/images/DavisBessePic.jpg" alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <form action="/user/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus
                                required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button class="btn btn-success btn-block">Login</button>
                            <a class="my-auto" href="/user/register">Register</a>
                        </div>
                    </form>
                </div>
            </div>
            <div style="color: lightslategray;" class="mt-2 d-flex justify-content-center">OR</div>
            <div class="mt-2">
                <!-- Use the SVG image directly as the link for Microsoft login -->
                <a href="/auth/microsoft" class="ms-login-link ">
                    <img src="/images/svg/msLoginDark.svg" alt="Sign in with Microsoft" class="ms-login-icon" width="100%">
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .ms-login-link {
        width: 100%; /* Adjust the width as needed */
        border-radius: 10px; /* Rounded corners */
        overflow: hidden; /* Ensure overflow is hidden for rounded corners */
        position: relative; /* Positioning context for shadows */
        transition: box-shadow 0.3s ease; /* Smooth transition for shadow */
        display: inline-flex; /* Make it inline-flex for proper alignment */
        align-items: center; /* Center items vertically */
        justify-content: center; /* Center content horizontally */
        text-decoration: none; /* Remove default underline */
        color: inherit; /* Inherit text color */
    }

    .ms-login-link:hover {
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.2); /* Shadow on hover */
        opacity: 0.9; /* Slightly reduce opacity on hover */
    }

    .ms-login-icon {
        width: 100%; /* Adjust the width of the SVG icon */
        vertical-align: middle; /* Align icon vertically with text */
    }

    .ms-login-text {
        font-size: 18px; /* Adjust text size */
    }
</style>
