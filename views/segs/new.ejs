<% layout('/layouts/boilerplate') %>
    <h1>New Seg Template</h1>
    <form action="/seg/instruction/new" method="post">

        <div class="row">
            <div class="col mb-3">
                <label for="team" class="form-label">Team</label>
                <select name="team" id="team" class="form-control">
                    <option value="Operations">Operations (OP)</option>
                    <option value="Maintenance and Technical">Maintenance and Technical (MT)</option>
                </select>
            </div>

            <div class="col mb-3">
                <label for="department" class="form-label">Department</label>
                <select name="department" id="department" class="form-control">
                    <option value="Program Administration">Program Administration (PA)</option>
                    <option value="Implementation and Oversight">Implementation and Oversight (IO)</option>
                </select>
            </div>
            <div class="col mb-3">
                <label for="segNum" class="form-label">Number</label>
                <input min="1" class="form-control" type="number" name="segNum" id="segNum" required>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="applicableAOC">Applicable AO&C</label>
            <textarea name="applicableAOC" id="applicableAOC" class="form-control"> </textarea>
        </div>

        <div class="mb-3">
            <label class="form-label" for="reviewActivity">Review Activity</label>
            <textarea name="reviewActivity" id="reviewActivity" class="form-control"> </textarea>
        </div>

        <div class="mb-3">
            <label class="form-label" for="dataSubmittal">Data Submittal</label>
            <textarea name="dataSubmittal" id="dataSubmittal" class="form-control"> </textarea>
        </div>

        <div class="mb-3">
            <label class="form-label" for="reviewGuidance">Review Guidance</label>
            <textarea name="reviewGuidance" id="reviewGuidance" class="form-control"> </textarea>
        </div>

        <div class="mb-3" id="programContainer">
            <label for="programs">Programs that need to Review</label>
            <div class="d-flex mb-3">
                <input type="text" name="programs[]" id="program0" class="form-control" required>
                <button onclick="deleteRow(this)" type="button" class="btn btn-danger ms-2">DELETE</button>
            </div>
        </div>

        <div class="my-3">
            <button type="button" class="btn btn-info" onclick="addProgramReviewed()">Add More</button>
            <button id="submitButton" class="btn btn-success" type="submit">Submit</button>
        </div>
    </form>






    <!-- NicEdit -->
    <script src="/js/nicEdit.js" type="text/javascript"></script>
    <script type="text/javascript">bkLib.onDomLoaded(nicEditors.allTextAreas);</script>
    <script src="/js/newSeg.js"></script>
    <script>
        document.querySelector('title').innerHTML = `ARC Create New Seg Template`;
    </script>