<% layout('/layouts/boilerplate') %>
<link rel="stylesheet" href="/css/editPlant.css">

    <div class="d-flex justify-content-between">
        <h3>Edit <%= currentPlant.name %></h3>
        <%- include('../partials/modals/deletePlant')%>
    </div>
    
    <form action="/plant/<%= currentPlant._id %>/edit?_method=PUT" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="name" class="form-label">Change Name</label>
            <input maxlength="20" type="text" name="name" id="name" class="form-control" value="<%= currentPlant.name %>" required>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 mb-3">
                <label for="imageUpload" class="form-label">Change Plant Picture</label>
                <input onchange="changeImage(event)" type="file" name="image" id="imageUpload" class="form-control" accept="image/*">
            </div>
            <div class="col-12 col-md-6 mb-3">
                <div class="img-container">
                    <img 
                    id="showImage"
                    class="img-cropped"
                    src="<%= currentPlant.image.location %>" 
                    alt="">
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-primary">Save Changes</button>
        </div>
    </form>

    <script>
        const plantImageUrl = '<%= currentPlant.image.location %>';
    </script>
    <script src="/js/editPlant.js"></script>
