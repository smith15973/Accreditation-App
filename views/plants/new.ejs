<% layout('/layouts/boilerplate') %>
<link rel="stylesheet" href="/css/newPlant.css">
    <h1>Create New Plant</h1>
    <form action="/plant/new" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="name" class="form-label">Plant Name</label>
            <input maxlength="20" type="text" name="name" id="name" class="form-control" required>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 mb-3">
                <label for="imageUpload" class="form-label">Upload Plant Picture</label>
                <input onchange="changeImage(event)" type="file" name="image" id="imageUpload" class="form-control"
                    accept="image/*" required>
            </div>
            <div id="imageArea" class="col-12 col-md-6 mb-3">
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-primary">Create Plant</button>
        </div>
    </form>

<script src="/js/newPlant.js"></script>