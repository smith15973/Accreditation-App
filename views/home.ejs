<% layout('/layouts/boilerplate') %>
<link rel="stylesheet" href="/css/home.css">
<% if (currentUser.admin) { %>
    <div class="row">
        <div class="col mb-2">
            <input oninput="filterPlants(event)" placeholder="Search for Plant" class="form-control" type="text">
        </div>
        <div class="d-flex col-12 col-sm-9 col-md-7 col-lg-6 col-xl-5 justify-content-end mb-2">
            <a class="btn btn-secondary mx-1" href="/plant/new">Create New Plant</a>
            <a class="btn btn-secondary mx-1" href="/seg/instruction/new">Create new Seg Template</a>
        </div>
    </div>
<% } %>

<% if (currentUser.plants.length) { %>
<h3 class="mt-1 mb-3">Your Plants:</h3>
<div class="row">
    <% currentUser.plants.sort((a, b) => a.name.localeCompare(b.name)).forEach((plant) => { %>
        <div data-url="/plant/<%= plant._id %>" class="clickable-div col-12 col-sm-6 col-lg-4 col-xl-4 mb-4">
            <div class="card shadow">
                <div class="img-container">
                    <img src="<%= plant.image.location ? plant.image.location : '/images/DavisBessePic.jpg' %>" alt="" class="card-img-top img-cropped" />
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%= plant.name %></h5>
                </div>
            </div>
        </div>
    <% }) %>
</div>
<% } %>


<% if (currentUser.plants.length !== plants.length) { 
    const currentUserReqPlantIDs = currentUser.requestedPlants.map(plant => plant._id.toString());
    const currentUserPlantIDs = currentUser.plants.map(plant => plant._id.toString());
%>
    <h3 class="mt-1 mb-3">Other Plants:</h3>
    <div class="row">
        <% plants.sort((a, b) => a.name.localeCompare(b.name)).forEach((plant) => { %>
            <%if (!currentUserPlantIDs.includes(plant._id.toString())) { %>
            <div data-url="/plant/<%= plant._id %>" class="col-12 col-sm-6 col-lg-4 col-xl-4 mb-4">
                <div class="card shadow">
                    <div class="img-container">
                        <img src="<%= plant.image.location ? plant.image.location : '/images/DavisBessePic.jpg' %>" alt="" class="card-img-top img-cropped" />
                    </div>
                    <div class="card-body d-flex justify-content-between">
                        <h5 class="card-title"><%= plant.name %></h5>
                        <% if (!currentUserReqPlantIDs.includes(plant._id.toString())) { %>
                            <form action="/user/<%= currentUser._id %>/request/<%= plant._id %>?_method=PUT" method="POST">
                                <button class="btn btn-secondary">Request Access</button>
                            </form>
                        <% } else { %>
                            <button class="btn btn-secondary" disabled>Requested</button>
                        <% } %>
                    </div>
                </div>
            </div>
            <% } %>
        <% }) %>
    </div>
<% } %>


<script src="/js/home.js"></script>